@using Microsoft.AspNetCore.Components.Authorization
@using HotelBooking.Web.Services
@inherits LayoutComponentBase
@inject IAuthService AuthService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-success me-2">
                                <i class="oi oi-circle-check"></i> Connecté
                            </span>
                            <span class="text-success fw-bold">
                                Bonjour @context.User.Identity?.Name !
                            </span>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="d-flex align-items-center">
                            <span class="badge bg-secondary me-2">
                                <i class="oi oi-circle-x"></i> Non connecté
                            </span>
                            <span class="text-muted">Visiteur</span>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>

            <div class="d-flex align-items-center">
                <AuthorizeView>
                    <Authorized>
                        <div class="d-flex align-items-center gap-2">
                            <!-- Bouton de déconnexion intégré directement -->
                            <button @onclick="LogoutUser" class="btn btn-danger btn-sm" title="Se déconnecter">
                                <i class="oi oi-account-logout me-1"></i>
                                <span>Déconnexion</span>
                            </button>
                        </div>
                    </Authorized>
                    <NotAuthorized>
                        <div class="d-flex gap-2">
                            <a href="/login" class="btn btn-outline-primary btn-sm">
                                <i class="oi oi-account-login"></i> Connexion
                            </a>
                            <a href="/register" class="btn btn-primary btn-sm">
                                <i class="oi oi-plus"></i> Inscription
                            </a>
                        </div>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private async Task LogoutUser()
    {
        await AuthService.Logout();
        NavManager.NavigateTo("/", true);
    }
    
    [Inject]
    private NavigationManager NavManager { get; set; } = default!;
}
