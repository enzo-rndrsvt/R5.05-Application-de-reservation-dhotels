@using Microsoft.AspNetCore.Components.Authorization
@using HotelBooking.Web.Components.Shared

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
 <a class="navbar-brand" href="">
    <i class="oi oi-home"></i> Hôtel SkullKing
  </a>
     <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
       <span class="navbar-toggler-icon"></span>
  </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
     <div class="nav-item px-3">
  <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
  <span class="oi oi-home" aria-hidden="true"></span> Accueil
   </NavLink>
  </div>
  
 <AuthorizeView>
  <Authorized>
 <div class="nav-item px-3">
     <NavLink class="nav-link" href="rooms">
     <span class="oi oi-grid-three-up" aria-hidden="true"></span> Nos cabines
    <span class="badge bg-success ms-2">SkullKing</span>
       </NavLink>
   </div>
      <div class="nav-item px-3">
   <NavLink class="nav-link" href="booking">
  <span class="oi oi-calendar" aria-hidden="true"></span> Réservation
  </NavLink>
       </div>
    <div class="nav-item px-3">
       <NavLink class="nav-link" href="my-bookings">
        <span class="oi oi-list" aria-hidden="true"></span> Mes réservations
       </NavLink>
    </div>
    <div class="nav-item px-3">
   <NavLink class="nav-link" href="profile">
        <span class="oi oi-person" aria-hidden="true"></span> Mon profil
     </NavLink>
 </div>
    
  <!-- Section Administration - Visible uniquement pour les Admins -->
    <AuthorizeView Roles="Admin">
        <Authorized Context="adminContext">
            <hr class="border-light">
            <div class="nav-item px-3">
                <div class="nav-link text-light">
                    <span class="oi oi-shield text-warning" aria-hidden="true"></span>
                    <strong>ADMINISTRATION</strong>
                </div>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/setup">
                    <span class="oi oi-wrench" aria-hidden="true"></span> Configuration
                    <small class="d-block">Gestion générale</small>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/rooms/create">
                    <span class="oi oi-plus" aria-hidden="true"></span> Nouvelle Chambre
                    <small class="d-block">Créer une cabine</small>
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/database">
                    <span class="oi oi-hard-drive" aria-hidden="true"></span> Base de Données
                    <small class="d-block">Migrations & Maintenance</small>
                </NavLink>
            </div>
            <hr class="border-light">
            <div class="nav-item px-3">
                <div class="nav-link text-light">
                    <span class="oi oi-bug text-info" aria-hidden="true"></span>
                    <strong>DEBUG & TESTS</strong>
                </div>
            </div>
            <div class="nav-item px-3">
       <NavLink class="nav-link" href="test-availability">
           <span class="oi oi-calendar" aria-hidden="true"></span> Test Disponibilité
           <small class="d-block">Debug disponibilité</small>
       </NavLink>
    </div>
    <div class="nav-item px-3">
       <NavLink class="nav-link" href="debug-api">
           <span class="oi oi-bug" aria-hidden="true"></span> Debug API
           <small class="d-block">Diagnostic API</small>
       </NavLink>
    </div>
    <div class="nav-item px-3">
       <NavLink class="nav-link" href="quick-book">
           <span class="oi oi-flash" aria-hidden="true"></span> Réservation Express
           <small class="d-block">Bypass vérifications</small>
       </NavLink>
    </div>
    <div class="nav-item px-3">
       <NavLink class="nav-link" href="test-images">
           <span class="oi oi-image" aria-hidden="true"></span> Test Images
           <small class="d-block">Upload d'images</small>
       </NavLink>
    </div>
        </Authorized>
    </AuthorizeView>
      
 <hr class="text-white-50 my-2" />
   <div class="nav-item px-3">
     <div class="nav-link text-success">
     <span class="oi oi-circle-check" aria-hidden="true"></span> 
  Bienvenue @context.User.Identity?.Name
  </div>
  </div>
     <div class="nav-item px-3 py-2">
 <LogoutButtonNav />
    </div>
  </Authorized>
       <NotAuthorized>
  <div class="nav-item px-3">
       <NavLink class="nav-link text-warning" href="rooms">
    <span class="oi oi-lock-locked" aria-hidden="true"></span> Nos cabines
  <small class="d-block">Connexion requise</small>
  </NavLink>
</div>
 <hr class="text-white-50 my-2" />
 <div class="nav-item px-3">
    <NavLink class="nav-link" href="login">
           <span class="oi oi-account-login" aria-hidden="true"></span> Connexion
      </NavLink>
   </div>
 <div class="nav-item px-3">
  <NavLink class="nav-link" href="register">
   <span class="oi oi-plus" aria-hidden="true"></span> Inscription
   </NavLink>
  </div>
    </NotAuthorized>
 </AuthorizeView>
    </nav>
</div>

@code {
  private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

