@page "/rooms"
@page "/chambres"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject IHotelService HotelService
@inject IBookingService BookingService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Nos cabines - Hôtel SkullKing</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                    <li class="breadcrumb-item active">Nos cabines</li>
                </ol>
            </nav>
            <h3><i class="oi oi-grid-three-up"></i> Nos cabines de pirates</h3>
            <p class="text-muted">Découvrez toutes les cabines disponibles à bord du SkullKing</p>
        </div>
        <AuthorizeView>
            <Authorized>
                <span class="badge bg-success fs-6">
                    <i class="oi oi-circle-check"></i> Accès autorisé
                </span>
            </Authorized>
        </AuthorizeView>
    </div>

    <AuthorizeView>
        <Authorized>
            @if (rooms == null && string.IsNullOrEmpty(errorMessage))
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-2">Chargement des cabines du SkullKing...</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-warning">
                    <h4><i class="oi oi-warning"></i> Problème de navigation</h4>
                    <p>@errorMessage</p>
                    <hr>
                    <p class="mb-0">L'hôtel SkullKing doit d'abord être créé via l'administration.</p>
                    <div class="mt-3">
                        <a href="/admin/setup" class="btn btn-primary">
                            <i class="oi oi-wrench"></i> Créer l'hôtel SkullKing
                        </a>
                    </div>
                </div>
            }
            else if (rooms != null && !rooms.Any())
            {
                <div class="alert alert-info">
                    <h4><i class="oi oi-info"></i> Aucune cabine disponible</h4>
                    <p>Le SkullKing n'a pas encore de cabines configurées.</p>
                    <hr>
                    <p class="mb-2"><strong>Diagnostic :</strong></p>
                    <ul>
                        <li>Hôtel SkullKing trouvé : ? @skullKingHotel?.Name</li>
                        <li>ID Hôtel : @skullKingHotel?.Id</li>
                        <li>Nombre de chambres retournées : @(rooms?.Count() ?? 0)</li>
                    </ul>
                    <div class="mt-3 d-flex gap-2">
                        <a href="/admin/rooms/create" class="btn btn-primary">
                            <i class="oi oi-plus"></i> Créer des cabines
                        </a>
                        <a href="/debug-rooms" class="btn btn-warning">
                            <i class="oi oi-bug"></i> Diagnostic avancé
                        </a>
                    </div>
                </div>
            }
            else if (rooms != null)
            {
                <div class="alert alert-success mb-4">
                    <i class="oi oi-circle-check"></i> 
                    <strong>@rooms.Count()</strong> cabine(s) disponible(s) à bord du SkullKing.
                </div>
                
                <div class="row">
                    @foreach (var room in rooms)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm border-primary">
                                <!-- Image de la chambre -->
                                <div class="position-relative">
                                    @if (room.HasImages)
                                    {
                                        <div class="card-img-top-container" style="height: 200px; overflow: hidden;">
                                            <img src="@room.PrimaryImageUrl" alt="Cabine @room.Number" 
                                                 class="card-img-top" 
                                                 style="width: 100%; height: 200px; object-fit: cover;" />
                                        </div>
                                        
                                        @if (room.ImageCount > 1)
                                        {
                                            <span class="badge bg-dark position-absolute" style="top: 10px; right: 10px;">
                                                <i class="oi oi-camera-slr"></i> @room.ImageCount
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" 
                                             style="height: 200px;">
                                            <div class="text-center text-muted">
                                                <i class="oi oi-image" style="font-size: 3rem;"></i>
                                                <p class="mt-2">Aucune image</p>
                                            </div>
                                        </div>
                                    }
                                </div>

                                <div class="card-header text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
                                    <h5 class="mb-0">
                                        <i class="oi oi-home"></i> Cabine @room.Number
                                    </h5>
                                    <span class="badge bg-light text-dark">@room.Type</span>
                                </div>
                                <div class="card-body">
                                    <p class="card-text text-muted">@room.BriefDescription</p>
         
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted">Matelots adultes</small>
                                            <div class="fw-bold">
                                                <i class="oi oi-people"></i> @room.AdultsCapacity
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Moussaillons</small>
                                            <div class="fw-bold">
                                                <i class="oi oi-person"></i> @room.ChildrenCapacity
                                            </div>
                                        </div>
                                    </div>

                                    <div class="price-section">
                                        @if (room.CurrentDiscount != null)
                                        {
                                            <div class="mb-2">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="oi oi-tag"></i> @room.CurrentDiscount.Percentage% de réduction
                                                </span>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <span class="text-decoration-line-through text-muted me-2">
                                                    @room.PricePerNight.ToString("C")
                                                </span>
                                                <span class="h5 text-success mb-0">
                                                    @CalculateDiscountedPrice(room.PricePerNight, room.CurrentDiscount.Percentage).ToString("C")
                                                </span>
                                            </div>
                                            <small class="text-muted">par nuit d'aventure</small>
                                        }
                                        else
                                        {
                                            <div class="h5 text-primary">
                                                @room.PricePerNight.ToString("C") 
                                                <small class="text-muted">/ nuit</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <a href="/booking/@room.Id" class="btn btn-success">
                                            <i class="oi oi-calendar"></i> Réserver
                                        </a>
                                        <a href="/room/@room.Id" class="btn btn-primary">
                                            <i class="oi oi-eye"></i> Voir les détails
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning d-flex align-items-center p-4" role="alert">
                        <i class="oi oi-lock-locked me-3 fs-1"></i>
                        <div>
                            <h4 class="alert-heading">Accès au navire refusé !</h4>
                            <p class="mb-3">Pour découvrir nos cabines de pirates, il faut d'abord s'identifier, matelot !</p>
                            <hr>
                            <div class="d-flex gap-2">
                                <a href="/login" class="btn btn-primary">
                                    <i class="oi oi-account-login"></i> Se connecter
                                </a>
                                <a href="/register" class="btn btn-outline-primary">
                                    <i class="oi oi-plus"></i> Créer un compte
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private IEnumerable<Room>? rooms;
    private string? errorMessage;
    private HotelForUser? skullKingHotel;

    protected override async Task OnInitializedAsync()
    {
        await LoadSkullKingHotelAndRooms();
    }

    private async Task LoadSkullKingHotelAndRooms()
    {
        try
        {
            Console.WriteLine("=== DEBUG ROOMS LOADING ===");
            
            // Récupérer l'hôtel SkullKing
            var hotels = await HotelService.GetAllHotelsAsync();
            Console.WriteLine($"Hôtels trouvés: {hotels?.Count() ?? 0}");
            
            if (hotels != null && hotels.Any())
            {
                foreach (var hotel in hotels)
                {
                    Console.WriteLine($"Hôtel: {hotel.Name} (ID: {hotel.Id})");
                }
            }
            
            skullKingHotel = hotels?.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));
            Console.WriteLine($"SkullKing trouvé: {skullKingHotel?.Name ?? "NULL"}");

            if (skullKingHotel == null)
            {
                errorMessage = "L'hôtel SkullKing n'a pas encore été créé.";
                Console.WriteLine("ERREUR: Aucun hôtel SkullKing trouvé");
                return;
            }

            // Récupérer toutes les chambres de l'hôtel SkullKing
            Console.WriteLine($"Chargement des chambres pour l'hôtel {skullKingHotel.Id}...");
            var loadedRooms = await HotelService.GetHotelRoomsAsync(skullKingHotel.Id, 1, 50);
            Console.WriteLine($"Chambres trouvées: {loadedRooms?.Count() ?? 0}");
            
            if (loadedRooms != null && loadedRooms.Any())
            {
                foreach (var room in loadedRooms.Take(3))
                {
                    Console.WriteLine($"Chambre: {room.Number} - {room.Type} (ID: {room.Id})");
                }
                if (loadedRooms.Count() > 3)
                {
                    Console.WriteLine($"... et {loadedRooms.Count() - 3} autres chambres");
                }
            }
            
            rooms = loadedRooms;
            Console.WriteLine($"Rooms assignées: {rooms?.Count() ?? 0}");
            Console.WriteLine("=== FIN DEBUG ROOMS ===");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"EXCEPTION dans LoadSkullKingHotelAndRooms: {ex.Message}");
            Console.WriteLine($"StackTrace: {ex.StackTrace}");
            errorMessage = $"Erreur lors du chargement des cabines du SkullKing: {ex.Message}";
        }
    }

    private decimal CalculateDiscountedPrice(decimal originalPrice, decimal discountPercentage)
    {
        return originalPrice * (1 - discountPercentage / 100);
    }
}