@page "/rooms"
@page "/chambres"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject IHotelService HotelService
@inject NavigationManager NavigationManager
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Nos cabines - Hôtel SkullKing</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                    <li class="breadcrumb-item active">Nos cabines</li>
                </ol>
            </nav>
            <h3><i class="oi oi-grid-three-up"></i> Nos cabines de pirates</h3>
            <p class="text-muted">Découvrez toutes les cabines disponibles à bord du SkullKing</p>
        </div>
        <AuthorizeView>
            <Authorized>
                <span class="badge bg-success fs-6">
                    <i class="oi oi-circle-check"></i> Accès autorisé
                </span>
            </Authorized>
        </AuthorizeView>
    </div>

    <AuthorizeView>
        <Authorized>
            @if (rooms == null && string.IsNullOrEmpty(errorMessage))
            {
                <div class="text-center p-4">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Chargement...</span>
                    </div>
                    <p class="mt-2">Chargement des cabines du SkullKing...</p>
                </div>
            }
            else if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-warning">
                    <h4><i class="oi oi-warning"></i> Problème de navigation</h4>
                    <p>@errorMessage</p>
                    <hr>
                    <p class="mb-0">L'hôtel SkullKing doit d'abord être créé via l'administration.</p>
                    <div class="mt-3">
                        <a href="/admin/setup" class="btn btn-primary">
                            <i class="oi oi-wrench"></i> Créer l'hôtel SkullKing
                        </a>
                    </div>
                </div>
            }
            else if (rooms != null && !rooms.Any())
            {
                <div class="alert alert-info">
                    <h4><i class="oi oi-info"></i> Aucune cabine disponible</h4>
                    <p>Le SkullKing n'a pas encore de cabines configurées.</p>
                    <hr>
                    <div class="mt-3">
                        <a href="/admin/setup" class="btn btn-primary">
                            <i class="oi oi-plus"></i> Créer des cabines
                        </a>
                    </div>
                </div>
            }
            else if (rooms != null)
            {
                <div class="alert alert-success mb-4">
                    <i class="oi oi-circle-check"></i> 
                    <strong>@rooms.Count()</strong> cabine(s) disponible(s) à bord du SkullKing.
                </div>
                
                <div class="row">
                    @foreach (var room in rooms)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100 shadow-sm border-primary">
                                <div class="card-header text-white d-flex justify-content-between align-items-center" style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);">
                                    <h5 class="mb-0">
                                        <i class="oi oi-home"></i> Cabine @room.Number
                                    </h5>
                                    <span class="badge bg-light text-dark">@room.Type</span>
                                </div>
                                <div class="card-body">
                                    <p class="card-text text-muted">@room.BriefDescription</p>
         
                                    <div class="row mb-3">
                                        <div class="col-6">
                                            <small class="text-muted">Matelots adultes</small>
                                            <div class="fw-bold">
                                                <i class="oi oi-people"></i> @room.AdultsCapacity
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <small class="text-muted">Moussaillons</small>
                                            <div class="fw-bold">
                                                <i class="oi oi-person"></i> @room.ChildrenCapacity
                                            </div>
                                        </div>
                                    </div>

                                    <div class="price-section">
                                        @if (room.CurrentDiscount != null)
                                        {
                                            <div class="mb-2">
                                                <span class="badge bg-warning text-dark">
                                                    <i class="oi oi-tag"></i> @room.CurrentDiscount.Percentage% de réduction
                                                </span>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <span class="text-decoration-line-through text-muted me-2">
                                                    @room.PricePerNight.ToString("C")
                                                </span>
                                                <span class="h5 text-success mb-0">
                                                    @CalculateDiscountedPrice(room.PricePerNight, room.CurrentDiscount.Percentage).ToString("C")
                                                </span>
                                            </div>
                                            <small class="text-muted">par nuit d'aventure</small>
                                        }
                                        else
                                        {
                                            <div class="h5 text-primary">
                                                @room.PricePerNight.ToString("C") 
                                                <small class="text-muted">/ nuit</small>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-grid gap-2">
                                        <a href="/booking/@room.Id" class="btn btn-success">
                                            <i class="oi oi-calendar"></i> Réserver
                                        </a>
                                        <button class="btn btn-outline-primary" @onclick="() => ShowRoomDetails(room.Id)">
                                            <i class="oi oi-eye"></i> Détails
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </Authorized>
        <NotAuthorized>
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning d-flex align-items-center p-4" role="alert">
                        <i class="oi oi-lock-locked me-3 fs-1"></i>
                        <div>
                            <h4 class="alert-heading">Accès au navire refusé !</h4>
                            <p class="mb-3">Pour découvrir nos cabines de pirates, il faut d'abord s'identifier, matelot !</p>
                            <hr>
                            <div class="d-flex gap-2">
                                <a href="/login" class="btn btn-primary">
                                    <i class="oi oi-account-login"></i> Se connecter
                                </a>
                                <a href="/register" class="btn btn-outline-primary">
                                    <i class="oi oi-plus"></i> Créer un compte
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

<!-- Modal pour les détails de chambre -->
@if (showModal && selectedRoom != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
   <div class="modal-dialog modal-lg">
    <div class="modal-content">
                <div class="modal-header">
         <h5 class="modal-title">
       <i class="oi oi-home"></i> Cabine @selectedRoom.Number - @selectedRoom.Type
  </h5>
  <button type="button" class="btn-close" @onclick="CloseModal"></button>
 </div>
 <div class="modal-body">
     <div class="row">
           <div class="col-md-6">
          <h6><i class="oi oi-info"></i> Informations de la cabine</h6>
         <dl class="row">
       <dt class="col-4">Type :</dt>
    <dd class="col-8">@selectedRoom.Type</dd>
     
         <dt class="col-4">Capacité adultes :</dt>
             <dd class="col-8">@selectedRoom.AdultsCapacity matelots</dd>
          
          <dt class="col-4">Capacité enfants :</dt>
                    <dd class="col-8">@selectedRoom.ChildrenCapacity moussaillons</dd>
    </dl>
         </div>
    <div class="col-md-6">
  <h6><i class="oi oi-dollar"></i> Tarification</h6>
             @if (selectedRoom.CurrentDiscount != null)
         {
      <div class="alert alert-warning">
         <strong>Réduction de @selectedRoom.CurrentDiscount.Percentage% !</strong>
   </div>
      <dl class="row">
      <dt class="col-6">Prix original :</dt>
    <dd class="col-6"><del>@selectedRoom.PricePerNight.ToString("C")</del></dd>
      
         <dt class="col-6"><strong>Prix réduit :</strong></dt>
 <dd class="col-6"><strong>@CalculateDiscountedPrice(selectedRoom.PricePerNight, selectedRoom.CurrentDiscount.Percentage).ToString("C")</strong></dd>
 </dl>
               }
     else
        {
   <dl class="row">
      <dt class="col-6">Prix par nuit :</dt>
    <dd class="col-6"><strong>@selectedRoom.PricePerNight.ToString("C")</strong></dd>
    </dl>
}
              </div>
            </div>
        
              <hr>
       
    <div class="row">
                <div class="col-12">
         <h6><i class="oi oi-document"></i> Description</h6>
      <p>@selectedRoom.BriefDescription</p>
  </div>
                </div>
        </div>
                <div class="modal-footer">
     <a href="/booking/@selectedRoom.Id" class="btn btn-success">
  <i class="oi oi-calendar"></i> Réserver cette cabine
 </a>
   <button type="button" class="btn btn-secondary" @onclick="CloseModal">
            <i class="oi oi-x"></i> Fermer
           </button>
          </div>
          </div>
        </div>
    </div>
}

@code {
    private IEnumerable<Room>? rooms;
    private string? errorMessage;
    private HotelForUser? skullKingHotel;
    private Room? selectedRoom;
    private bool showModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadSkullKingHotelAndRooms();
    }

    private async Task LoadSkullKingHotelAndRooms()
    {
        try
        {
            // Récupérer l'hôtel SkullKing
            var hotels = await HotelService.GetAllHotelsAsync();
            skullKingHotel = hotels.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));

            if (skullKingHotel == null)
            {
                errorMessage = "L'hôtel SkullKing n'a pas encore été créé.";
                return;
            }

            // Récupérer toutes les chambres de l'hôtel SkullKing
            rooms = await HotelService.GetHotelRoomsAsync(skullKingHotel.Id, 1, 50);
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement des cabines du SkullKing: {ex.Message}";
        }
    }

    private decimal CalculateDiscountedPrice(decimal originalPrice, decimal discountPercentage)
    {
        return originalPrice * (1 - discountPercentage / 100);
    }

    private void ShowRoomDetails(Guid roomId)
    {
        if (rooms != null)
        {
            selectedRoom = rooms.FirstOrDefault(r => r.Id == roomId);
            showModal = true;
            StateHasChanged();
        }
    }

    private void CloseModal()
    {
        showModal = false;
        selectedRoom = null;
        StateHasChanged();
    }

    private void ReserveRoom(Guid roomId)
    {
        NavigationManager.NavigateTo($"/booking/{roomId}");
    }
}