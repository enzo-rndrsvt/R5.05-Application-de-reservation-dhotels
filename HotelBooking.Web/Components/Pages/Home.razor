                                            </svg>
                                            @(room.AdultsCapacity + room.ChildrenCapacity) personnes
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body p-4 d-flex flex-column bg-dark-card-body">
                                <p class="card-text text-slate-400 flex-grow-1 mb-4" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                                    @room.BriefDescription
