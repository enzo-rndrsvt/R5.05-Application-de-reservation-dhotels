                                        @room.PricePerNight.ToString("C0")<span class="fw-bold opacity-75 ms-1" style="font-size: 0.7em;">/NUIT</span>
                                    </span>
                                </div>
                            </div>

                            <div class="card-body bg-transparent p-4 d-flex flex-column border-top border-slate-800 position-relative card-content-hover backdrop-blur-sm rounded-bottom-4" style="background: linear-gradient(to bottom, rgba(15, 23, 42, 0.4), rgba(15, 23, 42, 0.1));">

                                <h4 class="text-amber-500 fw-bold mb-2 font-title text-uppercase tracking-wide text-truncate">@room.Type</h4>

                                <div class="d-flex align-items-center text-amber-500 small mb-3 opacity-75 font-title">
                                    <div class="d-flex align-items-center me-3">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M23 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg>
                                        <span class="text-uppercase tracking-wider">Capacité : @(room.AdultsCapacity + room.ChildrenCapacity)</span>
                                    </div>
                                </div>

