                                        <i class="oi oi-people me-2"></i> @(room.AdultsCapacity + room.ChildrenCapacity) personnes
                                    </div>
                                </div>
                            </div>

                            <div class="card-body p-4 d-flex flex-column">
                                <p class="card-text text-slate-400 flex-grow-1 mb-4" style="display: -webkit-box; -webkit-line-clamp: 3; -webkit-box-orient: vertical; overflow: hidden;">
                                    @room.BriefDescription
                                </p>

                                <div class="d-flex flex-wrap gap-2 mb-4">
                                    <span class="badge badge-amber-outline-sm">Vue sur l'océan</span>
                                    <span class="badge badge-amber-outline-sm">@room.Type</span>
                                </div>

                                <a href="/room/@room.Id" class="btn btn-outline-amber w-100 d-flex align-items-center justify-content-center group">
                                    Découvrir <i class="oi oi-arrow-right ms-2 transition-transform group-hover-translate"></i>
