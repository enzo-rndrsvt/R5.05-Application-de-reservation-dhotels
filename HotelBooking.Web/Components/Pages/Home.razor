        {
            <div class="text-center py-5">
                <div class="spinner-border text-amber-500" role="status" style="width: 3rem; height: 3rem;"></div>
                <p class="text-slate-200 mt-3 tracking-wide">Recherche des trésors en cours...</p>
            </div>
        }
        else if (!featuredRooms.Any())
        {
            <div class="text-center py-5 card card-dark-theme border-slate-800 p-5 mx-auto rounded-4" style="max-width: 600px; backdrop-filter: blur(10px); background: rgba(15, 23, 42, 0.6);">
                <i class="oi oi-lock-locked display-4 text-slate-500 mb-4 d-block"></i>
                <h4 class="text-white mb-3 font-title text-uppercase tracking-wide">Le navire est fermé</h4>
                <p class="text-slate-300 mb-4">Aucune cabine disponible pour le moment.</p>
