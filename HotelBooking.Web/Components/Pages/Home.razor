@code {
    private IEnumerable<Room>? featuredRooms;
    private bool hasMoreRooms = false; // Nouvelle variable pour savoir s'il y en a d'autres

    protected override async Task OnInitializedAsync()
    {
        await LoadFeaturedRooms();
    }

    private async Task LoadFeaturedRooms()
    {
        try
        {
            var hotels = await HotelService.GetAllHotelsAsync();
            var skullKingHotel = hotels?.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));

            if (skullKingHotel != null)
            {
                // ASTUCE : On demande 4 chambres au lieu de 3.
                // Si on en reçoit 4, c'est qu'il y en a plus que 3 à afficher.
                var loadedRooms = await HotelService.GetHotelRoomsAsync(skullKingHotel.Id, 1, 4);

                if (loadedRooms != null && loadedRooms.Count() > 3)
                {
                    hasMoreRooms = true;
                    // On ne garde que les 3 premières pour l'affichage
                    featuredRooms = loadedRooms.Take(3);
                }
                else
                {
                    hasMoreRooms = false;
                    featuredRooms = loadedRooms;
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Erreur chargement chambres page d'accueil : {ex.Message}");
        }
    }

}

<style>
