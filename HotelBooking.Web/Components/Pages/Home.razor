                                    @(string.IsNullOrEmpty(room.BriefDescription) ? "Une chambre spectaculaire inspirée de la légende, offrant confort et mystère pour votre équipage." : room.BriefDescription)
                                </p>

                                <div class="d-flex flex-wrap gap-2 mb-4">
                                    <span class="badge badge-outline-amber text-uppercase tracking-wider rounded-pill">Vue mer</span>
                                    <span class="badge badge-outline-amber text-uppercase tracking-wider rounded-pill">Unique</span>
                                </div>

                                <a href="/room/@room.Id" class="btn btn-outline-amber w-100 text-uppercase fw-bold py-3 rounded-pill group-hover-btn d-flex align-items-center justify-content-center tracking-widest">
                                    Découvrir <span class="ms-2 transition-transform transform-arrow">→</span>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (hasMoreRooms)
            {
                <div class="text-center mt-5 pt-4">
                    <a href="rooms" class="btn btn-outline-amber text-uppercase tracking-widest fw-bold px-5 py-3 rounded-pill d-inline-flex align-items-center group-hover-btn">
                        Voir toutes les chambres <span class="ms-2 transition-transform transform-arrow">→</span>
                    </a>
                </div>
            }
        }
    </div>
</section>

