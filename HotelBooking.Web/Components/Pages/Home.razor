@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Accueil - Réservation d'hôtels</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Bienvenue sur notre plateforme de réservation d'hôtels</h1>
            <p class="lead">Trouvez et réservez les meilleurs hôtels pour vos voyages</p>
        </div>
    </div>

    <AuthorizeView>
        <Authorized>
            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <i class="oi oi-circle-check me-3 fs-4"></i>
                        <div>
                            <h4 class="alert-heading mb-1">Vous êtes connecté !</h4>
                            <p class="mb-0">Bonjour <strong>@context.User.Identity?.Name</strong>, vous pouvez maintenant accéder à toutes nos fonctionnalités.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="oi oi-list-rich display-4 text-primary mb-3"></i>
                            <h5 class="card-title">Parcourir les hôtels</h5>
                            <p class="card-text">Découvrez notre sélection d'hôtels de qualité</p>
                            <a href="/hotels" class="btn btn-primary">Voir les hôtels</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="oi oi-person display-4 text-info mb-3"></i>
                            <h5 class="card-title">Mon profil</h5>
                            <p class="card-text">Gérez vos informations personnelles</p>
                            <a href="/profile" class="btn btn-info">Mon profil</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="oi oi-calendar display-4 text-success mb-3"></i>
                            <h5 class="card-title">Mes réservations</h5>
                            <p class="card-text">Consultez vos réservations en cours</p>
                            <a href="/bookings" class="btn btn-success">Mes réservations</a>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="row mt-4">
                <div class="col-12">
                    <div class="alert alert-warning d-flex align-items-center" role="alert">
                        <i class="oi oi-circle-x me-3 fs-4"></i>
                        <div>
                            <h4 class="alert-heading mb-1">Vous n'êtes pas connecté</h4>
                            <p class="mb-0">Connectez-vous ou créez un compte pour accéder à nos services de réservation.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-6 offset-md-3 text-center">
                    <div class="card">
                        <div class="card-body">
                            <i class="oi oi-account-login display-4 text-primary mb-3"></i>
                            <h3>Commencez votre voyage</h3>
                            <p>Connectez-vous ou inscrivez-vous pour accéder à notre sélection d'hôtels</p>
                            <div class="d-grid gap-2 d-md-block">
                                <a href="/login" class="btn btn-primary btn-lg">
                                    <i class="oi oi-account-login"></i> Se connecter
                                </a>
                                <a href="/register" class="btn btn-outline-primary btn-lg">
                                    <i class="oi oi-plus"></i> S'inscrire
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
