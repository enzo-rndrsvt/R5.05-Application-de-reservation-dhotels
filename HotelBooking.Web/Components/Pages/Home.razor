                    <NotAuthorized>
                        <a href="login" class="btn btn-outline-amber px-4 py-3 text-uppercase tracking-wider fw-bold rounded-pill">Connexion requise</a>
                    </NotAuthorized>
                </AuthorizeView>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var room in featuredRooms)
                {
                    <div class="col-lg-4 col-md-6 d-flex">
                        <div class="card card-room h-100 border-0 bg-transparent w-100 group">
                            <div class="position-relative overflow-hidden card-img-wrapper shadow-lg rounded-top-4">
                                @if (room.HasImages)
                                {
                                    <img src="@room.PrimaryImageUrl" alt="@room.Type" class="w-100 h-100 object-fit-cover transition-zoom rounded-top-4" />
                                }
                                else
                                {
                                    <div class="w-100 h-100 bg-slate-800 d-flex align-items-center justify-content-center text-slate-600 rounded-top-4">
                                        <i class="oi oi-image fs-1"></i>
                                    </div>
                                }

