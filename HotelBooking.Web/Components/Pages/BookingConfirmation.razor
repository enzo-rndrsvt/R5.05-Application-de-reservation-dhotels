                            </li>
                        </ul>
                    </div>

                    <div class="d-flex justify-content-center mb-5">
                        <a href="/" class="btn btn-amber py-3 px-5 fw-bold rounded-3 d-flex align-items-center justify-content-center shadow-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" /><polyline points="9 22 9 12 15 12 15 22" /></svg>
                            Retour à l'accueil
                        </a>
                    </div>

                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid BookingId { get; set; }

    private BookingForUser? booking;
    private bool isLoading = true;
    private string userName = "";
    private string userEmail = "";
    private string displayImageUrl = "";
    private int guests = 1;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserInfo();
        await LoadBookingAndRoomImage();
        isLoading = false;
    }

    private async Task LoadUserInfo()
    {
        try
        {
            var profile = await UserProfileService.GetCurrentUserProfileAsync();
            if (profile != null)
            {
                userName = $"{profile.FirstName} {profile.LastName}".Trim();
                if (string.IsNullOrWhiteSpace(userName)) userName = profile.Username;
                userEmail = profile.Email;
                return;
            }
        }
        catch { }

        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            userName = user.Identity.Name ?? "Voyageur";
            userEmail = user.FindFirst(ClaimTypes.Email)?.Value
                     ?? user.FindFirst("email")?.Value
                     ?? user.FindFirst("preferred_username")?.Value
                     ?? "Email inconnu";
        }
    }

    private async Task LoadBookingAndRoomImage()
    {
        try
        {
            var userBookings = await BookingService.GetUserBookingsAsync();
            booking = userBookings.FirstOrDefault(b => b.Id == BookingId);

            // Fallback si la réservation n'est pas encore indexée
            if (booking == null && userBookings.Any())
            {
                booking = userBookings.OrderByDescending(b => b.StartingDate).First();
            }

            if (booking != null)
            {
                // 1. Essayer l'image stockée dans booking
                if (!string.IsNullOrEmpty(booking.RoomImageUrl))
                {
                    displayImageUrl = booking.RoomImageUrl;
                }
                // 2. Si vide, chercher l'image via l'API HotelService
                else
                {
                    try
                    {
                        var hotels = await HotelService.GetAllHotelsAsync();
                        var hotel = hotels.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));

                        if (hotel != null)
                        {
                            var rooms = await HotelService.GetHotelRoomsAsync(hotel.Id, 1, 100);
                            var room = rooms.FirstOrDefault(r => r.Number == booking.RoomNumber);

                            if (room != null && !string.IsNullOrEmpty(room.PrimaryImageUrl))
                            {
                                displayImageUrl = room.PrimaryImageUrl;
                            }
                        }
                    }
                    catch { }
                }
            }
        }
        catch { }
    }
}

