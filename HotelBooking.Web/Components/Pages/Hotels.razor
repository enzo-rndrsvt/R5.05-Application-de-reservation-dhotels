@page "/hotels"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@inject IHotelService HotelService

<h3>Liste des hôtels</h3>

@if (hotels == null)
{
    <p><em>Chargement...</em></p>
}
else if (errorMessage != null)
{
    <p class="text-danger">@errorMessage</p>
}
else if (!hotels.Any())
{
    <p><em>Aucun hôtel disponible.</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Propriétaire</th>
                    <th>Note</th>
                    <th>Nombre de chambres</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var hotel in hotels)
                {
                    <tr>
                        <td>@hotel.Name</td>
                        <td>@hotel.OwnerName</td>
                        <td>
                            @for (int i = 0; i < (int)hotel.StarRating; i++)
                            {
                                <span>⭐</span>
                            }
                            <span class="text-muted">(@hotel.StarRating.ToString("0.0"))</span>
                        </td>
                        <td>@hotel.NumberOfRooms</td>
                        <td>
                            <a href="/hotels/@hotel.Id" class="btn btn-sm btn-primary">Voir détails</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <p class="text-muted mt-3">Total: @hotels.Count() hôtel(s)</p>
}

@code {
    private IEnumerable<HotelForUser>? hotels;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            hotels = await HotelService.GetAllHotelsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement des hôtels: {ex.Message}";
        }
    }
}