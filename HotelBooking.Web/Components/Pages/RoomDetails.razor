@page "/room/{roomId:guid}"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@inject IHotelService HotelService
@inject IBookingService BookingService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Cabine @(room?.Number.ToString() ?? "") - Hôtel SkullKing</PageTitle>

<div class="page-container bg-darker-950 min-vh-100 text-slate-300 pb-5">

    <div class="container pt-4 mb-4">
        <a href="/rooms" class="text-slate-400 text-decoration-none hover-text-amber d-inline-flex align-items-center mb-3 group-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2 transition-transform group-hover-translate-back"><path d="m15 18-6-6 6-6" /></svg>
            Retour aux chambres
        </a>
    </div>

    @if (room == null && string.IsNullOrEmpty(errorMessage))
    {
        <div class="container text-center py-5">
            <div class="spinner-border text-amber-500" role="status"></div>
            <p class="mt-3 text-slate-400">Chargement des détails de la cabine...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="container">
            <div class="alert alert-warning border-amber-500 bg-dark-900-opacity text-amber-500">
                <i class="oi oi-warning me-2"></i> @errorMessage
            </div>
            <div class="mt-3">
                <a href="/rooms" class="btn btn-outline-amber">Retourner à la liste</a>
            </div>
        </div>
    }
    else if (room != null)
    {
        <div class="container">

            <div class="card card-dark-theme border-0 overflow-hidden mb-5 rounded-4 shadow-lg">

                <div class="position-relative" style="height: 500px;">
                    @if (room.AllImageUrls.Any())
                    {
                        var validImages = room.AllImageUrls.Where(url => !string.IsNullOrWhiteSpace(url)).ToList();
                        var carouselId = $"roomCarousel_{room.Id.ToString().Replace("-", "")}";

                        <div id="@carouselId" class="carousel slide h-100" data-bs-ride="carousel">
                            <div class="carousel-inner h-100">
                                @for (int i = 0; i < validImages.Count; i++)
                                {
                                    <div class="carousel-item h-100 @(i == currentSlideIndex ? "active" : "")">
                                        <img src="@validImages[i]"
                                             class="d-block w-100 h-100 object-fit-cover"
                                             alt="Cabine @room.Number - Image @(i + 1)"
                                             onerror="this.style.display='none';" />
                                    </div>
                                }
                            </div>

                            @if (validImages.Count > 1)
                            {
                                <button class="carousel-control-prev" type="button" @onclick="PreviousSlide" style="z-index: 5;">
                                    <span class="carousel-control-prev-icon bg-dark-opacity rounded-circle p-3" aria-hidden="true"></span>
                                    <span class="visually-hidden">Précédent</span>
                                </button>
                                <button class="carousel-control-next" type="button" @onclick="NextSlide" style="z-index: 5;">
                                    <span class="carousel-control-next-icon bg-dark-opacity rounded-circle p-3" aria-hidden="true"></span>
                                    <span class="visually-hidden">Suivant</span>
                                </button>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center">
                            <i class="oi oi-image display-1 text-white-50"></i>
                        </div>
                    }

                    <div class="position-absolute inset-0 pointer-events-none" style="background: linear-gradient(to top, #0d1117 0%, transparent 60%); z-index: 2;"></div>

                    <div class="position-absolute top-0 end-0 m-4" style="z-index: 10;">
                        <span class="badge bg-amber-500 text-dark fs-5 fw-bold px-4 py-2 shadow-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor" stroke="none" class="me-2 mb-1"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" /></svg>
                            @room.PricePerNight.ToString("C0")<small class="fw-normal">/nuit</small>
                        </span>
                    </div>

                    <div class="position-absolute bottom-0 start-0 p-5 w-100" style="z-index: 3;">
                        <h1 class="text-amber-500 fw-bold display-4 mb-2">
                            Cabine @room.Number
                        </h1>
                        <div class="d-flex align-items-center text-white fs-5">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" /><circle cx="9" cy="7" r="4" /><path d="M22 21v-2a4 4 0 0 0-3-3.87" /><path d="M16 3.13a4 4 0 0 1 0 7.75" /></svg>
                            @(room.AdultsCapacity + room.ChildrenCapacity) personnes

                            <span class="badge bg-light text-dark ms-3 fs-6">@room.Type</span>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 bg-darker-card">
                    <div class="row g-5">

                        <div class="col-lg-7">

                            @if (room.AllImageUrls.Count > 1)
                            {
                                <div class="d-flex gap-2 mb-4 overflow-auto pb-2">
                                    @for (int i = 0; i < room.AllImageUrls.Count; i++)
                                    {
                                        var index = i;
                                        <img src="@room.AllImageUrls[i]"
                                             class="rounded cursor-pointer border border-2 @(i == currentSlideIndex ? "border-amber-500" : "border-transparent")"
                                             style="width: 80px; height: 60px; object-fit: cover; transition: all 0.2s;"
                                             @onclick="() => GoToSlide(index)"
                                             alt="Miniature @(i + 1)" />
                                    }
                                </div>
                            }

                            <h4 class="text-white mb-3">Une expérience pirate inoubliable</h4>
                            <p class="text-slate-400 mb-4 lh-lg">
                                @room.BriefDescription
                            </p>

                            <div class="d-flex flex-wrap gap-3 mb-5">
                                <span class="badge-feature-large"><i class="oi oi-star me-2 text-amber-500"></i> Suite thématique</span>
                                <span class="badge-feature-large"><i class="oi oi-lock-locked me-2 text-amber-500"></i> Coffre au trésor</span>
                                <span class="badge-feature-large"><i class="oi oi-eye me-2 text-amber-500"></i> Vue Océan</span>
                            </div>

                            <h5 class="text-amber-500 mb-3">Équipements de bord</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <ul class="list-unstyled text-slate-300">
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Hamac confortable</li>
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Carte aux trésors</li>
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Service de chambre</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-unstyled text-slate-300">
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Salle de bain privée</li>
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Décoration immersive</li>
                                        <li class="mb-2 d-flex align-items-center"><span class="bullet-amber me-2">•</span> Wi-Fi (via perroquet)</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-5">
                            <div class="card bg-black-opacity border border-slate-700 p-4 h-100 rounded-4 sticky-top" style="top: 20px; z-index: 1;">
                                <div class="text-center mb-4 border-bottom border-slate-700 pb-4">
                                    <p class="text-slate-400 mb-1">À partir de</p>
                                    @if (room.CurrentDiscount != null)
                                    {
                                        <div class="d-flex justify-content-center align-items-baseline gap-2">
                                            <h3 class="text-amber-500 fw-bold m-0">@CalculateDiscountedPrice(room.PricePerNight, room.CurrentDiscount.Percentage).ToString("C0")</h3>
                                            <span class="text-decoration-line-through text-slate-500 small">@room.PricePerNight.ToString("C0")</span>
                                        </div>
                                        <span class="badge bg-danger mt-2">-@room.CurrentDiscount.Percentage% Offre Pirate !</span>
                                    }
                                    else
                                    {
                                        <h3 class="text-amber-500 fw-bold">@room.PricePerNight.ToString("C0") <small class="fs-6 text-slate-400 fw-normal">/ nuit</small></h3>
                                    }
                                </div>

                                <div class="mb-4">
                                    <div class="d-flex justify-content-between mb-3 text-slate-300">
                                        <span>Capacité</span>
                                        <span class="fw-bold">@(room.AdultsCapacity + room.ChildrenCapacity) personnes</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-3 text-slate-300">
                                        <span>Type</span>
                                        <span class="fw-bold">@room.Type</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-3 text-slate-300">
                                        <span>Numéro</span>
                                        <span class="fw-bold">@room.Number</span>
                                    </div>
                                </div>

                                <a href="/booking/@room.Id" class="btn btn-amber w-100 py-3 fw-bold text-dark mb-3 rounded-3">
                                    Réserver maintenant
                                </a>

                                <button class="btn btn-outline-secondary w-100 mb-3" @onclick="ShareRoom">
                                    <i class="oi oi-share me-2"></i> Partager
                                </button>

                                <p class="text-center text-slate-500 small fst-italic">
                                    <i class="oi oi-circle-check me-1"></i> Annulation gratuite jusqu'à 48h avant l'arrivée
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Guid RoomId { get; set; }

    private Room? room;
    private string? errorMessage;
    private int currentSlideIndex = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadRoomDetails();
    }

    protected override async Task OnParametersSetAsync()
    {
        if (room?.Id != RoomId)
        {
            await LoadRoomDetails();
            currentSlideIndex = 0;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && room != null && room.AllImageUrls.Count > 1)
        {
            try
            {
                await Task.Delay(200);
                var carouselId = $"roomCarousel_{room.Id.ToString().Replace("-", "")}";
                await JSRuntime.InvokeVoidAsync("initializeCarousels");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"JS Error: {ex.Message}");
            }
        }
    }

    private async Task LoadRoomDetails()
    {
        try
        {
            errorMessage = null;
            var hotels = await HotelService.GetAllHotelsAsync();
            foreach (var hotel in hotels)
            {
                var rooms = await HotelService.GetHotelRoomsAsync(hotel.Id, 1, 100);
                room = rooms?.FirstOrDefault(r => r.Id == RoomId);
                if (room != null) break;
            }

            if (room == null)
            {
                errorMessage = "Cette cabine n'a pas été trouvée.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur lors du chargement : {ex.Message}";
        }
    }

    private decimal CalculateDiscountedPrice(decimal originalPrice, decimal discountPercentage)
    {
        return originalPrice * (1 - discountPercentage / 100);
    }

    private async Task ShareRoom()
    {
        try
        {
            var url = NavigationManager.Uri;
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", url);
        }
        catch { /* Fallback */ }
    }

    private async Task GoToSlide(int index)
    {
        if (room == null || index < 0 || index >= room.AllImageUrls.Count) return;
        currentSlideIndex = index;
        var carouselId = $"roomCarousel_{room.Id.ToString().Replace("-", "")}";
        try { await JSRuntime.InvokeVoidAsync("goToCarouselSlide", carouselId, index); } catch { }
        StateHasChanged();
    }

    private async Task NextSlide()
    {
        var nextIndex = (currentSlideIndex + 1) >= (room?.AllImageUrls.Count ?? 0) ? 0 : currentSlideIndex + 1;
        await GoToSlide(nextIndex);
    }

    private async Task PreviousSlide()
    {
        var prevIndex = (currentSlideIndex - 1) < 0 ? (room?.AllImageUrls.Count ?? 0) - 1 : currentSlideIndex - 1;
        await GoToSlide(prevIndex);
    }
}

