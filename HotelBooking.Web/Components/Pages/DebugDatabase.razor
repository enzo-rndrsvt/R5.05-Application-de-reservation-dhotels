@page "/debug-database"
@using HotelBooking.Web.Services
@inject IHttpClientFactory HttpClientFactory
@inject ILocalStorageService LocalStorage

<PageTitle>Debug Base de Données</PageTitle>

<div class="container mt-4">
    <h2>?? Debug Base de Données</h2>
    
    @if (!string.IsNullOrEmpty(debugMessage))
    {
        <div class="alert alert-info">
            @debugMessage
        </div>
    }
    
    <div class="card">
        <div class="card-header">
            <h5>Test de l'Intégrité de la Base de Données</h5>
        </div>
        <div class="card-body">
            <div class="d-grid gap-2">
                <button class="btn btn-primary" @onclick="TestDatabase" disabled="@isLoading">
                    @if (isLoading)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    ?? Tester la Base de Données
                </button>
            </div>
            
            @if (!string.IsNullOrEmpty(result))
            {
                <div class="mt-3">
                    <h6>Résultat :</h6>
                    <pre style="background-color: #f8f9fa; padding: 1rem; border-radius: 5px; max-height: 400px; overflow-y: auto;">@result</pre>
                </div>
            }
            
            <div class="mt-3">
                <h6>Instructions :</h6>
                <ol>
                    <li>Cliquez sur "Tester la Base de Données" pour diagnostiquer le problème</li>
                    <li>Si la colonne ImageUrl n'existe pas, vous devrez appliquer le script SQL suivant :</li>
                </ol>
                
                <div class="mt-3">
                    <h6>Script de Correction SQL :</h6>
                    <div style="background-color: #1e1e1e; color: #dcdcdc; padding: 1rem; border-radius: 5px; font-family: 'Courier New', monospace;">
                        <pre>-- Ajouter la colonne ImageUrl si elle n'existe pas
ALTER TABLE Rooms ADD ImageUrl NVARCHAR(MAX);

-- Mettre à jour toutes les chambres existantes avec une image par défaut
UPDATE Rooms 
SET ImageUrl = 'https://picsum.photos/800/600?random=' + CAST(NEWID() AS NVARCHAR(36))
WHERE ImageUrl IS NULL;</pre>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string? debugMessage;
    private string? result;
    private bool isLoading = false;

    private async Task TestDatabase()
    {
        isLoading = true;
        result = null;
        debugMessage = "Test en cours...";
        StateHasChanged();

        try
        {
            var httpClient = HttpClientFactory.CreateClient("HotelBookingAPI");
            
            // Ajouter le token d'auth
            var token = await LocalStorage.GetItemAsync<string>("authToken");
            if (!string.IsNullOrEmpty(token))
            {
                httpClient.DefaultRequestHeaders.Authorization = 
                    new System.Net.Http.Headers.AuthenticationHeaderValue("Bearer", token);
            }

            var response = await httpClient.PostAsync("api/admin/rooms/emergency-fix-imageurl", null);
            
            var content = await response.Content.ReadAsStringAsync();
            
            if (response.IsSuccessStatusCode)
            {
                debugMessage = "? Test réussi - Base de données OK !";
            }
            else
            {
                debugMessage = "? Problème détecté avec la base de données";
            }
            
            result = $"Status: {response.StatusCode}\n\nRéponse:\n{content}";
        }
        catch (Exception ex)
        {
            debugMessage = $"? Erreur lors du test: {ex.Message}";
            result = ex.ToString();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}