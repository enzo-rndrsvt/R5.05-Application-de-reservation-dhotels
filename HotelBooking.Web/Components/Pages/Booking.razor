                            <span class="input-group-text bg-slate-800 border-slate-700 text-slate-400"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="20" height="14" x="2" y="5" rx="2" /><line x1="2" x2="22" y1="10" y2="10" /></svg></span>
                            <input type="text" class="form-control bg-slate-800 border-slate-700 text-white" placeholder="0000 0000 0000 0000" disabled="@isProcessingPayment" />
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-6">
                            <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Expiration</label>
                            <input type="text" class="form-control bg-slate-800 border-slate-700 text-white" placeholder="MM/AA" disabled="@isProcessingPayment" />
                        </div>
                        <div class="col-6">
                            <label class="form-label text-slate-400 x-small fw-bold text-uppercase">CVC</label>
                            <input type="text" class="form-control bg-slate-800 border-slate-700 text-white" placeholder="123" disabled="@isProcessingPayment" />
                        </div>
                    </div>

                    @if (isProcessingPayment)
                    {
                        <div class="text-center mt-4">
                            <div class="spinner-border text-amber-500 mb-2" role="status"></div>
                            <p class="text-slate-400 small animate-pulse">Validation du trésor...</p>
                        </div>
                    }
                </div>
                <div class="modal-footer border-slate-700">
                    <button type="button" class="btn btn-outline-secondary" disabled="@isProcessingPayment" @onclick="ClosePaymentModal">Annuler</button>
                    <button type="button" class="btn btn-amber fw-bold px-4" disabled="@isProcessingPayment" @onclick="ProcessPaymentAndBooking">
                        @if (!isProcessingPayment)
                        {
                            <span>Payer @TotalDisplay</span>
                        }
                        else
                        {

                            <span>Traitement...</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public Guid? RoomId { get; set; }

    [SupplyParameterFromForm]
    private BookingCreation bookingModel { get; set; } = new();

    private IEnumerable<Room>? rooms;
    private Room? selectedRoom;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;
    private string availabilityError = string.Empty;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private bool isCheckingDates = false;
    private bool showPaymentModal = false;
    private bool isProcessingPayment = false;
    private int guests = 1;

    // Date minimale = Demain
    private string minDate = DateTime.Now.AddDays(1).ToString("yyyy-MM-dd");

    private string userEmail = string.Empty;
    private string userName = string.Empty;

    // Propriétés calculées
    private decimal SubTotal => (selectedRoom?.PricePerNight ?? 0) * bookingModel.NumberOfNights;
    private decimal Taxes => SubTotal * 0.1m;
    private decimal Total => bookingModel.EstimatedPrice ?? (SubTotal + Taxes);

    private string SubTotalDisplay => SubTotal.ToString("F2") + "€";
    private string TaxesDisplay => Taxes.ToString("F2") + "€";
    private string TotalDisplay => Total.ToString("F2") + "€";

    protected override async Task OnInitializedAsync()
    {
        // Initialiser les dates par défaut à demain
        if (bookingModel.StartingDate == default || bookingModel.StartingDate <= DateTime.Now.Date)
        {
            bookingModel.StartingDate = DateTime.Now.Date.AddDays(1);
            bookingModel.EndingDate = DateTime.Now.Date.AddDays(2);
        }

        await LoadUserInfo();
        await LoadRooms();

        if (RoomId.HasValue)
        {
            bookingModel.RoomId = RoomId.Value;
            await OnRoomChanged();
        }
        isLoading = false;
    }

    private async Task LoadUserInfo()
    {
        try
        {
            // Tentative 1 : Service Profil (Données les plus riches)
            var profile = await UserProfileService.GetCurrentUserProfileAsync();
            if (profile != null)
            {
                userName = $"{profile.FirstName} {profile.LastName}".Trim();
                if (string.IsNullOrWhiteSpace(userName)) userName = profile.Username;
                userEmail = profile.Email;
                return;
            }
        }
        catch { }

        // Tentative 2 : Session / Claims (Fallback)
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity != null && user.Identity.IsAuthenticated)
        {
            userName = user.Identity.Name ?? "";
            userEmail = user.FindFirst(ClaimTypes.Email)?.Value
                     ?? user.FindFirst("email")?.Value
                     ?? user.FindFirst("preferred_username")?.Value
                     ?? "";
        }
    }

    private async Task LoadRooms()
    {
        try
        {
            var hotels = await HotelService.GetAllHotelsAsync();
            var skullKingHotel = hotels.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));

            if (skullKingHotel != null)
            {
                rooms = await HotelService.GetHotelRoomsAsync(skullKingHotel.Id, 1, 100);
            }
            else
            {
                errorMessage = "L'hôtel SkullKing n'a pas encore été créé.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur : {ex.Message}";
        }
    }

    private async Task OnDatesChanged()
    {
        errorMessage = string.Empty;
        availabilityError = string.Empty;

        // Validation des dates
        if (bookingModel.StartingDate <= DateTime.Now.Date)
        {
            availabilityError = "Vous ne pouvez pas réserver pour aujourd'hui ou dans le passé.";
            return;
        }

        if (bookingModel.EndingDate <= bookingModel.StartingDate)
        {
            availabilityError = "La date de départ doit être après la date d'arrivée.";
            return;
        }

        if (bookingModel.RoomId != Guid.Empty)
        {
            await CalculatePrice();
        }
    }

    private async Task OnRoomChanged()
    {
        if (bookingModel.RoomId != Guid.Empty && rooms != null)
        {
            selectedRoom = rooms.FirstOrDefault(r => r.Id == bookingModel.RoomId);
            if (selectedRoom != null && guests > (selectedRoom.AdultsCapacity + selectedRoom.ChildrenCapacity))
            {
                guests = selectedRoom.AdultsCapacity + selectedRoom.ChildrenCapacity;
            }
            await CalculatePrice();
        }
        else
        {
            selectedRoom = null;
            bookingModel.EstimatedPrice = null;
        }
    }

    private async Task CalculatePrice()
    {
        if (selectedRoom != null)
        {
            try
            {
                if (bookingModel.NumberOfNights <= 0) return;

                var estimatedPrice = await BookingService.CalculateEstimatedPriceAsync(
                    bookingModel.RoomId,
                    bookingModel.StartingDate,
                    bookingModel.EndingDate);

                if (estimatedPrice.HasValue)
                {
                    bookingModel.EstimatedPrice = estimatedPrice;
                    availabilityError = string.Empty;
                }
                else
                {
                    // Indisponible
                    availabilityError = "Ces dates sont indisponibles pour cette cabine.";
                    decimal sub = selectedRoom.PricePerNight * bookingModel.NumberOfNights;
                    bookingModel.EstimatedPrice = sub + (sub * 0.1m);
                }
            }
            catch
            {
                decimal sub = selectedRoom.PricePerNight * bookingModel.NumberOfNights;
                bookingModel.EstimatedPrice = sub + (sub * 0.1m);
            }
        }
        else
        {
            bookingModel.EstimatedPrice = null;
        }
        StateHasChanged();
    }

    private async Task HandleBookingCheck()
    {
        errorMessage = string.Empty;
        availabilityError = string.Empty;
        isCheckingDates = true;

        try
        {
            if (bookingModel.RoomId == Guid.Empty)
            {
                errorMessage = "Veuillez sélectionner une chambre.";
                isCheckingDates = false;
                return;
            }

            if (!bookingModel.IsValid)
            {
                errorMessage = "Veuillez vérifier les champs du formulaire.";
                isCheckingDates = false;
                return;
            }

            // Vérification Dates (Doublon de sécurité)
            if (bookingModel.StartingDate <= DateTime.Now.Date)
            {
                availabilityError = "Vous ne pouvez pas réserver pour aujourd'hui ou dans le passé.";
                isCheckingDates = false;
                return;
            }

            // Vérification disponibilité API
            var estimatedPrice = await BookingService.CalculateEstimatedPriceAsync(
                bookingModel.RoomId,
                bookingModel.StartingDate,
                bookingModel.EndingDate);

            if (!estimatedPrice.HasValue)
            {
                availabilityError = "Désolé, cette cabine n'est plus disponible pour ces dates.";
                isCheckingDates = false;
                return;
            }

            // Tout est bon => Paiement
            showPaymentModal = true;
        }
        catch (Exception ex)
        {
            errorMessage = "Erreur de connexion lors de la vérification.";
        }
        finally
        {
            isCheckingDates = false;
        }
    }

    private void ClosePaymentModal()
    {
        showPaymentModal = false;
        isProcessingPayment = false;
    }

    private async Task ProcessPaymentAndBooking()
    {
        isProcessingPayment = true;

        await Task.Delay(2000); // Simulation

        try
        {
            var result = await BookingService.CreateBookingAsync(bookingModel);

            if (result)
            {
                showPaymentModal = false;
                successMessage = $"Paiement accepté !";

                await Task.Delay(1000);

                // Récupération de l'ID pour redirection
                var userBookings = await BookingService.GetUserBookingsAsync();
                var latestBooking = userBookings.OrderByDescending(b => b.StartingDate).FirstOrDefault(); // Ou par DateCreation si dispo

                bookingModel = new BookingCreation
                {
                    StartingDate = DateTime.Now.Date.AddDays(1),
                    EndingDate = DateTime.Now.Date.AddDays(2)
                };
                selectedRoom = null;

                if (latestBooking != null)
                {
                    NavigationManager.NavigateTo($"/booking-confirmation/{latestBooking.Id}");
                }
                else
                {
                    NavigationManager.NavigateTo("/profile");
                }
            }
            else
            {
                showPaymentModal = false;
                availabilityError = "Erreur : La chambre a été réservée par quelqu'un d'autre.";
            }
        }
        catch (Exception ex)
        {
            showPaymentModal = false;
            errorMessage = $"Erreur technique : {ex.Message}";
        }
        finally
        {
            isProcessingPayment = false;
        }
    }
}

