@page "/booking"
@page "/booking/{RoomId:guid?}"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Globalization
@inject IBookingService BookingService
@inject IHotelService HotelService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Réservation - Hôtel SkullKing</PageTitle>

<div class="page-container bg-darker-950 min-vh-100 text-slate-300 pb-5">

    <div class="container pt-5 pb-4">
        <a href="@(selectedRoom != null ? $"/room/{selectedRoom.Id}" : "/rooms")" class="text-slate-400 text-decoration-none hover-text-amber d-inline-flex align-items-center mb-4 group-link">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2 transition-transform group-hover-translate-back"><path d="m15 18-6-6 6-6" /></svg>
            @(selectedRoom != null ? "Retour à la chambre" : "Retour aux chambres")
        </a>

        <h1 class="text-amber-500 mb-2 display-5 fw-bold">Réservation</h1>
    </div>

    <div class="container">
        @if (isLoading && rooms == null)
        {
            <div class="text-center py-5">
                <div class="spinner-border text-amber-500" role="status"></div>
                <p class="mt-3 text-slate-400">Préparation de votre cabine...</p>
            </div>
        }
        else if (rooms != null && !rooms.Any())
        {
            <div class="alert alert-warning border-amber-500 bg-dark-900-opacity text-amber-500 text-center p-5">
                <i class="oi oi-warning display-4 mb-3"></i>
                <h4>Aucune cabine disponible</h4>
                <p>Le navire semble complet.</p>
                <a href="/rooms" class="btn btn-outline-amber mt-3">Voir les disponibilités</a>
            </div>
        }
        else
        {
            <EditForm Model="@bookingModel" OnValidSubmit="HandleBooking" FormName="BookingForm">
                <DataAnnotationsValidator />

                <div class="row g-5">

                    <div class="col-lg-7">

                        <div class="card card-dark-theme border border-slate-800 p-4 mb-4 rounded-4">
                            <h4 class="text-slate-200 mb-4 border-bottom border-slate-800 pb-3">Informations personnelles</h4>

                            <div class="bg-amber-500-10 border border-amber-500-20 rounded-3 p-3 mb-4 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 me-2"><polyline points="20 6 9 17 4 12" /></svg>
                                <span class="text-amber-500 small">Vos informations ont été automatiquement remplies depuis votre compte.</span>
                            </div>

                            <AuthorizeView Context="authContext">
                                <div class="mb-4">
                                    <label class="form-label text-slate-400 small fw-bold">Nom complet <span class="text-amber-500">*</span></label>
                                    <input type="text" class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" value="@authContext.User.Identity?.Name" disabled />
                                </div>
                            </AuthorizeView>

                            <div class="row g-4 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label text-slate-400 small fw-bold">Email <span class="text-amber-500">*</span></label>
                                    <input type="email" class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" placeholder="votre@email.com" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-slate-400 small fw-bold">Téléphone <span class="text-amber-500">*</span></label>
                                    <input type="tel" class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" placeholder="+33 6 ..." />
                                </div>
                            </div>

                            <div class="mb-2">
                                <label class="form-label text-slate-400 small fw-bold">Nombre de voyageurs <span class="text-amber-500">*</span></label>
                                <InputNumber class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="guests" min="1" max="@(selectedRoom?.AdultsCapacity + selectedRoom?.ChildrenCapacity ?? 4)" />
                                <div class="form-text text-slate-500 small mt-1">
                                    Capacité : @(selectedRoom?.AdultsCapacity ?? 0) adultes, @(selectedRoom?.ChildrenCapacity ?? 0) enfants
                                </div>
                            </div>
                        </div>

                        <div class="card card-dark-theme border border-slate-800 p-4 mb-4 rounded-4">
                            <h4 class="text-slate-200 mb-4 border-bottom border-slate-800 pb-3">Dates de séjour</h4>
                            <div class="row g-4">
                                <div class="col-md-6">
                                    <label class="form-label text-slate-400 small fw-bold">Date d'arrivée <span class="text-amber-500">*</span></label>
                                    <InputDate class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="bookingModel.StartingDate" @bind-Value:after="OnDatesChanged" />
                                    <ValidationMessage For="@(() => bookingModel.StartingDate)" class="text-danger small mt-1" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label text-slate-400 small fw-bold">Date de départ <span class="text-amber-500">*</span></label>
                                    <InputDate class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="bookingModel.EndingDate" @bind-Value:after="OnDatesChanged" />
                                    <ValidationMessage For="@(() => bookingModel.EndingDate)" class="text-danger small mt-1" />
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-amber w-100 py-3 fw-bold text-dark mb-4 rounded-3 shadow-lg hover-scale" disabled="@isSubmitting">
                            @if (isSubmitting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                <span>Réservation en cours...</span>
                            }
                            else
                            {
                                <span>Confirmer la réservation</span>
                            }
                        </button>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-warning border-warning bg-warning-subtle text-warning-emphasis d-flex align-items-center rounded-3">
                                <i class="oi oi-warning me-2 fs-5"></i> @errorMessage
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success border-success bg-success-subtle text-success d-flex align-items-center rounded-3">
                                <i class="oi oi-circle-check me-2 fs-5"></i> @successMessage
                            </div>
                        }
                    </div>

                    <div class="col-lg-5">
                        <div class="card card-dark-theme border border-slate-800 rounded-4 p-4 sticky-top" style="top: 20px; background-color: #0b1121;">
                            <h5 class="text-amber-500 mb-4 fw-bold">Récapitulatif</h5>

                            @if (selectedRoom != null)
                            {
                                <div class="mb-3 rounded-3 overflow-hidden position-relative" style="height: 160px;">
                                    @if (selectedRoom.HasImages)
                                    {
                                        <img src="@selectedRoom.PrimaryImageUrl" class="w-100 h-100 object-fit-cover" alt="Chambre" />
                                    }
                                    else
                                    {
                                        <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center">
                                            <i class="oi oi-image fs-1 text-white-50"></i>
                                        </div>
                                    }
                                    <div class="position-absolute inset-0" style="background: linear-gradient(to top, rgba(15, 23, 42, 0.8), transparent);"></div>
                                </div>

                                <div class="mb-4">
                                    <h5 class="text-white fw-bold mb-1">
                                        Cabine @selectedRoom.Number
                                    </h5>
                                    <div class="text-slate-400 small d-flex align-items-center">
                                        <i class="oi oi-people me-2"></i>
                                        <span>@selectedRoom.AdultsCapacity Adultes, @selectedRoom.ChildrenCapacity Enfants max</span>
                                    </div>
                                </div>

                                <hr class="border-slate-800 opacity-50 my-4" />

                                <div class="d-flex justify-content-between mb-2 text-sm">
                                    <span class="text-slate-400">Arrivée:</span>
                                    <span class="text-slate-200">@bookingModel.StartingDate.ToString("dd MMM yyyy", new CultureInfo("fr-FR"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2 text-sm">
                                    <span class="text-slate-400">Départ:</span>
                                    <span class="text-slate-200">@bookingModel.EndingDate.ToString("dd MMM yyyy", new CultureInfo("fr-FR"))</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2 text-sm">
                                    <span class="text-slate-400">Durée:</span>
                                    <span class="text-slate-200">@bookingModel.NumberOfNights nuit@(bookingModel.NumberOfNights > 1 ? "s" : "")</span>
                                </div>

                                <hr class="border-slate-800 opacity-50 my-4" />

                                <div class="d-flex justify-content-between mb-2 text-sm">
                                    <span class="text-slate-400">@selectedRoom.PricePerNight.ToString("C0") × @bookingModel.NumberOfNights nuits</span>
                                    <span class="text-slate-200">@SubTotalDisplay</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2 text-sm">
                                    <span class="text-slate-400">Taxes et frais</span>
                                    <span class="text-slate-200">@TaxesDisplay</span>
                                </div>

                                <hr class="border-slate-800 opacity-50 my-4" />

                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="text-amber-500 fw-bold">Total</span>
                                    <span class="text-amber-500 fw-bold fs-4">
                                        @if (bookingModel.EstimatedPrice.HasValue || bookingModel.NumberOfNights > 0)
                                        {
                                            @TotalDisplay
                                        }
                                        else
                                        {
                                            <span>...</span>
                                        }
                                    </span>
                                </div>

                                <hr class="border-slate-800 opacity-50 my-4" />

                                <div>
                                    <h6 class="text-slate-300 mb-3 small fw-bold">Inclus</h6>
                                    <ul class="list-unstyled text-slate-400 small mb-0">
                                        <li class="mb-2 d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 me-2"><polyline points="20 6 9 17 4 12" /></svg> Petit-déjeuner buffet</li>
                                        <li class="mb-2 d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 me-2"><polyline points="20 6 9 17 4 12" /></svg> WiFi gratuit</li>
                                        <li class="mb-2 d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 me-2"><polyline points="20 6 9 17 4 12" /></svg> Accès piscine</li>
                                        <li class="mb-2 d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-amber-500 me-2"><polyline points="20 6 9 17 4 12" /></svg> Parking</li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5 text-slate-500">
                                    <i class="oi oi-home display-4 mb-3 opacity-25"></i>
                                    <p>Veuillez sélectionner une chambre.</p>
                                    <a href="/rooms" class="btn btn-sm btn-outline-secondary">Retourner au choix</a>
                                </div>
                            }
                        </div>
                    </div>

                </div>
            </EditForm>
        }
    </div>
</div>

@code {
    [Parameter] public Guid? RoomId { get; set; }

    [SupplyParameterFromForm]
    private BookingCreation bookingModel { get; set; } = new();

    private IEnumerable<Room>? rooms;
    private Room? selectedRoom;
    private string successMessage = string.Empty;
    private string errorMessage = string.Empty;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private int guests = 1;

    // Propriétés calculées pour l'affichage (évite le code C# complexe dans le HTML)
    private decimal SubTotal => (selectedRoom?.PricePerNight ?? 0) * bookingModel.NumberOfNights;
    private decimal Taxes => SubTotal * 0.1m; // 10% taxes simulées
    private decimal Total => bookingModel.EstimatedPrice ?? (SubTotal + Taxes);

    private string SubTotalDisplay => SubTotal.ToString("F2") + "€";
    private string TaxesDisplay => Taxes.ToString("F2") + "€";
    private string TotalDisplay => Total.ToString("F2") + "€";

    protected override async Task OnInitializedAsync()
    {
        await LoadRooms();

        if (RoomId.HasValue)
        {
            bookingModel.RoomId = RoomId.Value;
            await OnRoomChanged();
        }
        isLoading = false;
    }

    private async Task LoadRooms()
    {
        try
        {
            var hotels = await HotelService.GetAllHotelsAsync();
            var skullKingHotel = hotels.FirstOrDefault(h => h.Name.Contains("SkullKing", StringComparison.OrdinalIgnoreCase));

            if (skullKingHotel != null)
            {
                rooms = await HotelService.GetHotelRoomsAsync(skullKingHotel.Id, 1, 100);
            }
            else
            {
                errorMessage = "L'hôtel SkullKing n'a pas encore été créé.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur : {ex.Message}";
        }
    }

    private async Task OnDatesChanged()
    {
        if (bookingModel.RoomId != Guid.Empty && bookingModel.IsValid)
        {
            await CalculatePrice();
        }
    }

    private async Task OnRoomChanged()
    {
        if (bookingModel.RoomId != Guid.Empty && rooms != null)
        {
            selectedRoom = rooms.FirstOrDefault(r => r.Id == bookingModel.RoomId);
            if (selectedRoom != null && guests > (selectedRoom.AdultsCapacity + selectedRoom.ChildrenCapacity))
            {
                guests = selectedRoom.AdultsCapacity + selectedRoom.ChildrenCapacity;
            }
            await CalculatePrice();
        }
        else
        {
            selectedRoom = null;
            bookingModel.EstimatedPrice = null;
        }
    }

    private async Task CalculatePrice()
    {
        if (selectedRoom != null && bookingModel.IsValid)
        {
            try
            {
                // Calcul local pour réactivité immédiate (simulation de l'API)
                int nights = bookingModel.NumberOfNights;
                if (nights > 0)
                {
                    decimal sub = selectedRoom.PricePerNight * nights;
                    bookingModel.EstimatedPrice = sub + (sub * 0.1m); // Prix + Taxes
                }

                // Si vous avez une API réelle, décommentez ceci :
                // var apiPrice = await BookingService.CalculateEstimatedPriceAsync(bookingModel.RoomId, bookingModel.StartingDate, bookingModel.EndingDate);
                // if (apiPrice.HasValue) bookingModel.EstimatedPrice = apiPrice;
            }
            catch { }
        }
        else
        {
            bookingModel.EstimatedPrice = null;
        }
        StateHasChanged();
    }

    private async Task HandleBooking()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;

        if (!bookingModel.IsValid)
        {
            errorMessage = "Veuillez vérifier les dates (la date de départ doit être après l'arrivée).";
            return;
        }

        if (bookingModel.RoomId == Guid.Empty)
        {
            errorMessage = "Veuillez sélectionner une chambre via le menu des chambres.";
            return;
        }

        isSubmitting = true;

        try
        {
            // On s'assure que le prix est à jour avant l'envoi
            await CalculatePrice();

            var result = await BookingService.CreateBookingAsync(bookingModel);
            if (result)
            {
                successMessage = $"Réservation confirmée ! Un corbeau a été envoyé avec les détails.";
                bookingModel = new BookingCreation(); // Reset
                selectedRoom = null;
                await Task.Delay(3000);
                NavigationManager.NavigateTo("/my-bookings");
            }
            else
            {
                errorMessage = "Erreur technique lors de la création. Le capitaine enquête.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Erreur : {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

