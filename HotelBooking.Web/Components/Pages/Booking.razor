@page "/profile"
@using HotelBooking.Web.Models
@using HotelBooking.Web.Services
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IUserProfileService UserProfileService
@inject IBookingService BookingService
@inject NavigationManager NavigationManager
@inject IAuthService AuthService
@inject IJSRuntime JSRuntime
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>Mon Profil - Hôtel SkullKing</PageTitle>

<div class="page-container bg-darker-950 min-vh-100 text-slate-300 pb-5">
    
    <div class="container pt-5 pb-4">
        <h1 class="text-amber-500 mb-2 display-5 fw-bold">Mon Profil</h1>
        <p class="text-slate-400">Gérez vos informations personnelles et consultez vos aventures.</p>
    </div>

    <div class="container">
        <div class="row g-5">
            
            <div class="col-lg-4">
                <div class="card card-dark-theme border border-slate-800 p-4 rounded-4 sticky-top" style="top: 20px;">
                    
                    @if (isLoadingProfile)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-amber-500" role="status"></div>
                            <p class="mt-3 text-slate-400 small">Récupération du dossier...</p>
                        </div>
                    }
                    else if (userProfile != null)
                    {
                        <div class="text-center mb-4">
                            <div class="avatar-circle bg-amber-500 text-dark fw-bold fs-1 mx-auto mb-3 d-flex align-items-center justify-content-center shadow-lg">
                                @if (!string.IsNullOrEmpty(userProfile.FirstName))
                                {
                                    @userProfile.FirstName.Substring(0, 1).ToUpper()
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
                                }
                            </div>
                            <h4 class="text-white fw-bold mb-1">@userProfile.FirstName @userProfile.LastName</h4>
                            <p class="text-amber-500 small mb-2">@userProfile.Email</p>
                            
                            @if (userProfile.Roles != null && userProfile.Roles.Any())
                            {
                                <span class="badge bg-slate-800 border border-slate-700 text-slate-300 rounded-pill px-3 py-1">
                                    @string.Join(", ", userProfile.Roles)
                                </span>
                            }
                        </div>

                        <div class="d-flex bg-slate-900 rounded-pill p-1 mb-4 border border-slate-800">
                            <button class="btn btn-sm w-50 rounded-pill fw-bold transition-all @(activeTab == "info" ? "btn-amber" : "text-slate-400 hover-text-white")" 
                                    @onclick="@(() => SwitchToTab("info"))">
                                Infos
                            </button>
                            <button class="btn btn-sm w-50 rounded-pill fw-bold transition-all @(activeTab == "password" ? "btn-amber" : "text-slate-400 hover-text-white")" 
                                    @onclick="@(() => SwitchToTab("password"))">
                                Sécurité
                            </button>
                        </div>

                        <div class="tab-content">
                            @if (activeTab == "info")
                            {
                                <EditForm Model="@userProfile" OnValidSubmit="HandleUpdateProfile">
                                    <DataAnnotationsValidator />
                                    
                                    <div class="mb-3">
                                        <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Prénom</label>
                                        <InputText class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="userProfile.FirstName" />
                                        <ValidationMessage For="@(() => userProfile.FirstName)" class="text-danger x-small" />
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Nom</label>
                                        <InputText class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="userProfile.LastName" />
                                        <ValidationMessage For="@(() => userProfile.LastName)" class="text-danger x-small" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Nom d'utilisateur</label>
                                        <InputText class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="userProfile.Username" disabled />
                                    </div>

                                    <button type="submit" class="btn btn-outline-amber w-100 py-2 mt-2" disabled="@isUpdatingProfile">
                                        @if(isUpdatingProfile) { <span class="spinner-border spinner-border-sm me-2"></span> }
                                        Mettre à jour
                                    </button>
                                </EditForm>
                            }
                            else if (activeTab == "password")
                            {
                                <EditForm Model="@userProfile" OnValidSubmit="HandleChangePassword">
                                    <DataAnnotationsValidator />
                                    
                                    <div class="mb-3">
                                        <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Nouveau mot de passe</label>
                                        <InputText type="password" class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="userProfile.NewPassword" />
                                        <ValidationMessage For="@(() => userProfile.NewPassword)" class="text-danger x-small" />
                                    </div>
                                    
                                    <div class="mb-3">
                                        <label class="form-label text-slate-400 x-small fw-bold text-uppercase">Confirmation</label>
                                        <InputText type="password" class="form-control bg-slate-800 border-slate-700 text-slate-200 focus-amber" @bind-Value="userProfile.ConfirmPassword" />
                                        <ValidationMessage For="@(() => userProfile.ConfirmPassword)" class="text-danger x-small" />
                                    </div>

                                    <button type="submit" class="btn btn-outline-amber w-100 py-2 mt-2" disabled="@isChangingPassword">
                                        @if(isChangingPassword) { <span class="spinner-border spinner-border-sm me-2"></span> }
                                        Changer le mot de passe
                                    </button>
                                </EditForm>
                            }
                        </div>

                        @if (!string.IsNullOrEmpty(successMessage))
                        {
                            <div class="alert alert-success bg-success-subtle text-success border-0 small mt-3 mb-0 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                                @successMessage
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger bg-danger-subtle text-danger border-0 small mt-3 mb-0 d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
                                @errorMessage
                            </div>
                        }

                        <hr class="border-slate-800 my-4" />

                        <button class="btn btn-danger-soft w-100 d-flex align-items-center justify-content-center" @onclick="HandleLogout">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>
                            Déconnexion
                        </button>
                    }
                </div>
            </div>

            <div class="col-lg-8">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="text-white fw-bold mb-0">Mes Réservations</h3>
                    
                    <div class="btn-group bg-slate-900 border border-slate-800 rounded-pill p-1">
                        <button class="btn btn-sm rounded-pill px-3 @(bookingFilter == "all" ? "btn-amber" : "text-slate-400 hover-text-white")" @onclick="@(() => SetBookingFilter("all"))">Toutes</button>
                        <button class="btn btn-sm rounded-pill px-3 @(bookingFilter == "upcoming" ? "btn-amber" : "text-slate-400 hover-text-white")" @onclick="@(() => SetBookingFilter("upcoming"))">À venir</button>
                        <button class="btn btn-sm rounded-pill px-3 @(bookingFilter == "past" ? "btn-amber" : "text-slate-400 hover-text-white")" @onclick="@(() => SetBookingFilter("past"))">Passées</button>
                    </div>
                </div>

                @if (isLoadingBookings)
                {
                    <div class="text-center py-5">
                        <div class="spinner-border text-amber-500" role="status"></div>
                        <p class="mt-3 text-slate-400">Recherche de vos billets d'embarquement...</p>
                    </div>
                }
                else if (filteredBookings != null && filteredBookings.Any())
                {
                    <div class="d-flex flex-column gap-3">
                        @foreach (var booking in filteredBookings)
                        {
                            <div class="card card-dark-theme border border-slate-800 rounded-4 overflow-hidden hover-scale-sm transition-all">
                                <div class="row g-0">
                                    <div class="col-md-4 position-relative">
                                        @if (!string.IsNullOrEmpty(booking.RoomImageUrl))
                                        {
                                            <img src="@booking.RoomImageUrl" class="w-100 h-100 object-fit-cover" alt="Chambre" style="min-height: 180px;" />
                                        }
                                        else
                                        {
                                            <div class="w-100 h-100 bg-secondary d-flex align-items-center justify-content-center" style="min-height: 180px;">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white-50"><rect width="18" height="18" x="3" y="3" rx="2" ry="2"/><circle cx="9" cy="9" r="2"/><path d="m21 15-3.086-3.086a2 2 0 0 0-2.828 0L6 21"/></svg>
                                            </div>
                                        }
                                        
                                        <div class="position-absolute top-0 start-0 m-3">
                                            @if (booking.Status == "À venir" || booking.StartingDate > DateTime.Now)
                                            {
                                                <span class="badge bg-success-subtle text-success border border-success fw-bold">À venir</span>
                                            }
                                            else if (booking.Status == "Annulée")
                                            {
                                                <span class="badge bg-danger-subtle text-danger border border-danger fw-bold">Annulée</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary-subtle text-secondary border border-secondary fw-bold">Terminée</span>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body p-4 d-flex flex-column h-100">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h5 class="card-title text-white mb-1">@booking.HotelName</h5>
                                                    <p class="text-amber-500 small mb-0 fw-bold">Chambre @booking.RoomNumber • @booking.RoomType</p>
                                                </div>
                                                <div class="text-end">
                                                    <div class="fs-5 fw-bold text-white">@booking.Price.ToString("C0")</div>
                                                    <small class="text-slate-500">Total</small>
                                                </div>
                                            </div>

                                            <div class="row g-3 my-3">
                                                <div class="col-6">
                                                    <div class="d-flex align-items-center text-slate-300 small">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2 text-slate-500"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                                                        <div>
                                                            <span class="d-block text-slate-500 x-small">Arrivée</span>
                                                            @booking.StartingDate.ToString("dd MMM yyyy")
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="d-flex align-items-center text-slate-300 small">
                                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="me-2 text-slate-500"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                                                        <div>
                                                            <span class="d-block text-slate-500 x-small">Départ</span>
                                                            @booking.EndingDate.ToString("dd MMM yyyy")
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="mt-auto d-flex gap-2">
                                                <button class="btn btn-sm btn-outline-secondary flex-grow-1" @onclick="() => ShowBookingDetails(booking)">
                                                    Voir détails
                                                </button>
                                                @if (booking.Status != "Annulée" && booking.StartingDate > DateTime.Now)
                                                {
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => CancelBooking(booking)">
                                                        Annuler
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5 card card-dark-theme border border-slate-800 rounded-4">
                        <div class="mb-3 text-slate-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" y1="2" x2="16" y2="6"/><line x1="8" y1="2" x2="8" y2="6"/><line x1="3" y1="10" x2="21" y2="10"/></svg>
                        </div>
                        <h4 class="text-slate-300">Aucune réservation</h4>
                        <p class="text-slate-500 mb-4">Vous n'avez pas encore réservé de cabine pour cette période.</p>
                        <a href="/rooms" class="btn btn-amber fw-bold">Découvrir nos chambres</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@if (selectedBooking != null)
